<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5">
        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E5E5E5" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_subQuote"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/signup_dot_active"
                android:id="@+id/pagerDot_1"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/signup_dot"
                android:id="@+id/pagerDot_2"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/signup_dot"
                android:id="@+id/pagerDot_3"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/signup_dot"
                android:id="@+id/pagerDot_4"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/signup_dot"
                android:id="@+id/pagerDot_5"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="5dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook2"
                android:onClick="facebook"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:id="@+id/btn_login_facebook"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google"
                android:onClick="facebook"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:id="@+id/btn_login_google"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/notnow"
                android:onClick="facebook"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:id="@+id/btn_login_notnow"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
