<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="#33000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/vendorImageView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rest7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/vendorImageView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/buttons_gradient"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageButton
                        android:id="@+id/whatsappshare"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/whatsapp_logo" />

                    <ImageButton
                        android:id="@+id/favorites"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/unfavorited" />

                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/share_vendor" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="13dp"
                        android:src="@drawable/galleryimage"
                        android:id = "@+id/logo"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vendorTitleView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="15dp"
                            android:text="ADDRESS"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/addressView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Address content"
                            android:textColor="#70000000"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/callButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/call_back"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/phone"
                                android:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="call"
                                android:textColor="#60000000"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/rateButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="#00000000"
                                android:padding="0dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/rating"
                                android:tint="#f1c40f" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="rate"
                                android:textColor="#60000000"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/dirButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/dir_back"
                                android:padding="7dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/directions"
                                android:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="directions"
                                android:textColor="#60000000"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/chatButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/dir_back"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/chat"
                                android:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text="chat"
                                android:textColor="#60000000"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/DividerHorizontal"
                        android:layout_height="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="DESCRIPTION"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descriptionView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Description content"
                        android:textColor="#70000000"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>


                    <View
                        style="@style/DividerHorizontal"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="GALLERY"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/GalleryRecyclerView"
                            android:layout_width="0dp"
                            android:clipChildren="true"
                            android:layout_weight="7"
                            android:layout_height="55dp"
                            android:layout_marginTop="5dp" />

                        <!--<ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:src="@drawable/dotdotdot"
                            android:layout_marginTop="5dp"/>-->
                        <!--<ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:src="@drawable/addgallery"
                            android:layout_marginTop="5dp"/>-->
                    </LinearLayout>

                    <View
                        style="@style/DividerHorizontal"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:text="FOLLOW US ON"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="8dp"
                                android:id="@+id/fb"
                                android:padding="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/facebook" />

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="8dp"
                                android:id="@+id/gplus"
                                android:padding="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/gplus_logo" />

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="8dp"
                                android:padding="0dp"
                                android:id="@+id/twitter"
                                android:scaleType="fitXY"
                                android:src="@drawable/twitter_logo" />

                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="8dp"
                                android:padding="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/instagram" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/DividerHorizontal"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>