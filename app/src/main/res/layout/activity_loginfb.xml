<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EF6C00">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">
            <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/slide1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    style="@style/image_slider_current"
                    android:layout_marginRight="10dp"
                    android:onClick="slide"
                    />
                <ImageView
                    android:id="@+id/slide2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    style="@style/image_slider"
                    android:layout_marginRight="10dp"
                    android:onClick="slide"
                    />
                <ImageView
                    android:id="@+id/slide3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    style="@style/image_slider"
                    android:layout_marginRight="10dp"
                    android:onClick="slide"
                    />
                <ImageView
                    android:id="@+id/slide4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    style="@style/image_slider"
                    android:onClick="slide"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/slide5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    style="@style/image_slider"
                    android:layout_marginRight="10dp"
                    android:onClick="slide"
                    />
            </LinearLayout>

        </RelativeLayout>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/fb"
            android:onClick="facebook"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:id="@+id/authButton"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/gplus"
            android:id="@+id/sign_in_button"
            android:background="#00000000"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:padding="0dp"
        android:text="Not Now"
        android:textSize="18sp"
        android:textColor="#ef6c00"
        android:background="#ffffff"
        android:layout_margin="0dp"
        android:onClick="skiplogin"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"


        android:id="@+id/ibutton" />
</RelativeLayout>