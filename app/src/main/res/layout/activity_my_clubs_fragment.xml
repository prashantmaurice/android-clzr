<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mycardslayout"
    android:background="#ffffff"
    android:gravity="center"
    tools:context="com.clozerr.app.MyClubsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            card_view:cardBackgroundColor="#00ffffff"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchLayout"
                android:orientation="horizontal">

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:queryHint="" />

                <TextView
                    android:id="@+id/searchHint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:hint="Search for Places or Location" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sliding_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MyClubs" />

    </LinearLayout>


        <ImageView
            android:id="@+id/loyaltyempty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loyaltyempty"
            android:background="#ffffff"
            />




</RelativeLayout>
