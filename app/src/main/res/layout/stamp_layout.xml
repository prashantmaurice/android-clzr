<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout6">

        <TextView android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circularback"
            android:id="@+id/stampnumber"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Freebie 1"
            android:lines="2"
            android:id="@+id/freebiecontent" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/stampcheck"
        android:tint="@color/colorPrimary"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/ic_action_accept"
        android:layout_alignParentTop="true"
        android:paddingBottom="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/linearLayout6"
        android:layout_alignRight="@+id/linearLayout6"
        android:layout_alignEnd="@+id/linearLayout6" />

</RelativeLayout>