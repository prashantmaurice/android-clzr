<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="rect_answer"
    android:background="@drawable/homebg">

    <include layout="@layout/toolbar_translucent" />


    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/drawerLayout"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <Button
                android:layout_width="match_parent"
                android:text="SUGGEST A RESTAURANT"
                android:textSize="13sp"
                android:textColor="#BBEF6C00"
                android:onClick="prompt"
                android:layout_height="35dp"
                android:background="@drawable/partial_rounded_rect"
                android:elevation="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                style="@style/rect_answer"
                android:textStyle="bold" />
            <!-- activity view -->
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".Home"
                    android:layout_marginBottom="55dp"
                    />

                <include layout="@layout/mycards_sliding"/>
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/navdrawer_content"/>
